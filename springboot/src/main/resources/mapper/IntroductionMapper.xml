<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.IntroductionMapper">
    <select id="selectAll" resultType="com.example.entity.Introduction">
        select * from `introduction`
        <where>
            <if test="title != null and title != ''">title like concat('%',#{title},'%')</if>
        </where>
        order by id desc
    </select>

    <insert id="insert">
        insert into `introduction` (img,title,content,time)
        values(#{img},#{title},#{content},#{time})
    </insert>

    <update id="updateById">
        update `introduction` set img = #{img},title = #{title},content = #{content},time = #{time}
        where id = #{id}
    </update>

</mapper>